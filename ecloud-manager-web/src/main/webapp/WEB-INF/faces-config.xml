<!-- Marker file indicating JSF 2.2 should be enabled in the application -->
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <!--view-handler>org.omnifaces.viewhandler.NoAutoGeneratedIdViewHandler</view-handler-->
    </application>

    <component>
        <component-type>org.ecloudmanager.components.Cytoscape</component-type>
        <component-class>org.ecloudmanager.components.cytoscape.Cytoscape</component-class>
    </component>

    <converter>
        <converter-for-class>java.lang.Enum</converter-for-class>
        <converter-class>javax.faces.convert.EnumConverter</converter-class>
    </converter>

    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>
    <render-kit>
        <renderer>
            <component-family>org.ecloudmanager.components</component-family>
            <renderer-type>org.ecloudmanager.components.CytoscapeRenderer</renderer-type>
            <renderer-class>org.ecloudmanager.components.cytoscape.CytoscapeRenderer</renderer-class>
        </renderer>
    </render-kit>
</faces-config>
